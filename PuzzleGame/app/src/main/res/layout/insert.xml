<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txt_question"
        android:layout_width="match_parent"
        android:inputType="text"
        android:hint="问题内容"
        android:layout_height="50dp"/>

    <RadioGroup
        android:id="@+id/txt_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_question"
        >
        <RadioButton
            android:id="@+id/ans_A"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="A"
            android:textSize="30dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/ans_B"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="B"
            android:textSize="30dp"/>
        <RadioButton
            android:id="@+id/ans_C"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="C"
            android:textSize="30dp"/>
        <RadioButton
            android:id="@+id/ans_D"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="D"
            android:textSize="30dp"/>
        </RadioGroup>

    <EditText
        android:id="@+id/txt_A"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="选项A"
        android:layout_toRightOf="@id/txt_ans"
        android:layout_below="@id/txt_question"/>
    <EditText
        android:id="@+id/txt_B"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="选项B"
        android:layout_toRightOf="@id/txt_ans"
        android:layout_below="@id/txt_A"/>
    <EditText
        android:id="@+id/txt_C"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="选项C"
        android:layout_toRightOf="@id/txt_ans"
        android:layout_below="@id/txt_B"/>
    <EditText
        android:id="@+id/txt_D"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="选项D"
        android:layout_toRightOf="@id/txt_ans"
        android:layout_below="@id/txt_C" />
    <TextView
        android:text="*请通过选择左侧的单选框，确认该题正确答案"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000 "
        android:layout_below="@id/txt_D"/>
</RelativeLayout>